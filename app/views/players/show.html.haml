.header
  .row
    %h1= t('.title', name: @player.name)

.content
  .row
    %h2= t('.profile')
    %dl{'v-cloak' => true}
      %dt ID
      %dd {{profile.id}}
      %dt= t('.pseudonym')
      %dd {{profile.pseudonym}}
      %dt= t('.player_name')
      %dd {{profile.name}}
      %dt= t('.level')
      %dd {{profile.level}}
      %dt= t('.grade')
      %dd {{profile.grade ? profile.grade : 'N/A'}}
      %dt= t('.comment')
      %dd {{profile.comment}}
      %dt= t('.play_count')
      %dd {{profile.play_count}}
      %dt= t('.refle')
      %dd {{profile.refle}} Rf.
      %dt= t('.total_point')
      %dd {{profile.total_point}} pts.
      %dt= t('.last_play_place')
      %dd {{profile.last_play_place}}
      %dt= t('.last_play_datetime')
      %dd {{profile.last_play_datetime | datetime}}
      %dt= t('.updated_at')
      %dd {{profile.updated_at | datetime}}

  .row
    %h2= t('.music_data')
    %table{'v-cloak' => true}
      %colgroup.music_name{span: 1}
      %colgroup.basic{span: 4}
      %colgroup.medium{span: 4}
      %colgroup.hard{span: 4}
      %colgroup.special{span: 4}
      %thead
        %tr
          %th.sort_header{'data-colname' => 'name', rowspan: 2}= t('.music_name')
          %th{colspan: 4} BASIC
          %th{colspan: 4} MEDIUM
          %th{colspan: 4} HARD
          %th{colspan: 4} SPECIAL
        %tr
          - cols = {'Lv' => 'lv', 'AR' => 'achievement', 'Miss' => 'miss', 'Rank' => 'rank'}
          - Difficulty::DIFFICULTIES.each do |difficulty|
            - cols.each do |name, sortkey|
              %th.sort_header{'data-difficulty' => difficulty.to_s.downcase, 'data-colname' => sortkey}= name
      %tbody
        %tr{'v-repeat' => 'musics'}
          %td {{name}}
          - Difficulty::DIFFICULTIES.map(&:to_s).map(&:downcase).each do |difficulty|
            %td {{#{difficulty}_lv | level}}
            %td {{scores.#{difficulty}.achievement | achievement}}
            %td {{scores.#{difficulty}.miss_count | fullcombo}}
            %td {{scores.#{difficulty}.achievement | rank }}
